            <solid android:color="@color/colorDarkBlue" />
            <corners android:radius="@dimen/big_radius_3" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/max_layer_item_size"
        android:right="@dimen/max_layer_item_size">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorLightBlue" />
            <corners android:radius="@dimen/big_radius_2" />
        </shape>
    </item>
    <item
        android:left="@dimen/max_layer_item_size"
        android:top="@dimen/max_layer_item_size"
        android:bottom="@dimen/max_layer_item_size"
        android:right="@dimen/max_layer_item_size">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimaryDark" />
            <corners android:radius="@dimen/big_radius_1" />
        </shape>
    </item>
</layer-list>
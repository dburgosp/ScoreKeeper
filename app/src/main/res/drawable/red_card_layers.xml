<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/holo_red_dark" />
            <corners android:radius="@dimen/small_radius_3" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/min_layer_item_size"
        android:right="@dimen/min_layer_item_size">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/holo_red_light" />
            <corners android:radius="@dimen/small_radius_2" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/min_layer_item_size"
        android:left="@dimen/min_layer_item_size"
        android:right="@dimen/min_layer_item_size"
        android:top="@dimen/min_layer_item_size">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorRed" />
            <corners android:radius="@dimen/small_radius_1" />
        </shape>
    </item>
</layer-list>